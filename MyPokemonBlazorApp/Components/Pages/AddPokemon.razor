@rendermode InteractiveServer
@inject DatabaseContext Context

<div class="card">
    <div class="card-body bg-light">
        <h4 class="card-title">Add Pokemon</h4>
        <EditForm Model="model" OnValidSubmit="Submit" FormName="addPokemonForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="name" class="form-label">Name</label>
                    <InputText @bind-Value="model.Name" class="form-control" id="name" name="name" placeholder="Name" required />
                </div>
                <div class="col-md-3">
                    <label for="type" class="form-label">Type</label>
                    <InputText @bind-Value="model.Type" class="form-control" id="type" name="type" placeholder="Type" required />
                </div>
                <div class="col-md-3">
                    <label for="total" class="form-label">Total</label>
                    <InputNumber @bind-Value="model.Total" class="form-control" id="total" name="total" placeholder="Total" required />
                </div>
                <div class="col-md-3">
                    <label for="hp" class="form-label">HP</label>
                    <InputNumber @bind-Value="model.HP" class="form-control" id="hp" name="hp" placeholder="HP" required />
                </div>
                <div class="col-md-3">
                    <label for="attack" class="form-label">Attack</label>
                    <InputNumber @bind-Value="model.Attack" class="form-control" id="attack" name="attack" placeholder="Attack" required />
                </div>
                <div class="col-md-3">
                    <label for="defence" class="form-label">Defence</label>
                    <InputNumber @bind-Value="model.Defence" class="form-control" id="defence" name="defence" placeholder="Defence" required />
                </div>
                <div class="col-md-3">
                    <label for="speed" class="form-label">Speed</label>
                    <InputNumber @bind-Value="model.Speed" class="form-control" id="speed" name="speed" placeholder="Speed" required />
                </div>
                <div class="col-md-3">
                    <label for="generation" class="form-label">Generation</label>
                    <InputNumber @bind-Value="model.Generation" class="form-control" id="generation" name="generation" placeholder="Generation" required />
                </div>
                <div class="col-md-3">
                    <InputCheckbox @bind-Value="model.Legendary" class="form-check-input" id="legendary" name="legendary" />
                    <label for="legendary" class="form-label">Is Legendary?</label>
                </div>
            </div>

            <div class="d-grid col-3 float-end">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>

        </EditForm>
    </div>
</div>

@code {
    private Pokemon model;

    protected override void OnInitialized()
    {
        model = new();
    }

    private void Submit()
    {

    }
}
